def cuatro():
  costo=0
  print("")
  if tipo==1:
    costo=costo+120000
  elif tipo==2:
    costo=costo+80000
  elif tipo==3:
    costo=costo+50000
  
  total=costo
  print(f"En total de ingresos hay {total}")

while True:
  menu()
